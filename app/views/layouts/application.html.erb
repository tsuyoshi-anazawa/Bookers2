<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<% flash.each do |key,value| %>
<%= content_tag(:div,value, class: "#{key}") %>
<% end %>



<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>

  <nav>
    <ul class="nav navbar-nav navbar-right">

      <% if user_signed_in? %>

      <li><%= link_to user_path(current_user.id),class:"home" do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <span>Home</span>
        <% end %>
      </li>

      <li><%= link_to users_path,class:"users" do %>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <span>Users</span>
        <% end %>
      </li>

      <li><%= link_to books_path,class:"books" do %>
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <span>Books</span>
        <% end %>
      </li>

      <li><%= link_to destroy_user_session_path,:method => :delete,class:"logout" do %>
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
        <span>logout</span>
        <% end %>
      </li>

      <% else %>

      <li><%= link_to root_path,class:"home" do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <span>Home</span>
        <% end %>
      </li>

      <li><%= link_to homes_about_path,class:"about" do %>
        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
        <span>About</span>
        <% end %>
      </li>

      <li><%= link_to new_user_registration_path,class:"sign_up" do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        <span>sign up</span>
        <% end %>
      </li>

      <li><%= link_to new_user_session_path,class:"sign_in" do %>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
        <span>login</span>
        <% end %>
      </li>

      <% end %>

    </ul>
  </nav>
  </div>
</header>

    <%= yield %>
  </body>
</html>
