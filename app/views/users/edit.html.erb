<h1>User info</h1>

<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %> error prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true,class:"name" %>
  </div>

<div class="field">
    <%= f.label :profile_image %><br />
    <%= f.attachment_field :profile_image, autofocus: true,class:"user_image" %>
  </div>

<div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true,class:"introduction" %>
  </div>

<div class="actions">
<%= f.submit "Update User" %>
</div>

<% end %>