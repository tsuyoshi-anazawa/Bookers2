
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">


<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>


 <div class="field row">
<h5>Title</h5>
<%= f.text_field :title,class:"col-xs-12 book_title" %>
</div>

<div class="field row">
<h5>Opinion</h5>
<%= f.text_area :opinion,class:"col-xs-12 book_body" %>
</div>

<div class="actions row">
<%= f.submit "Update Book",class:" col-xs-12 btn btn-primary" %>
</div>

<% end %>

</div>
</div>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
<%= link_to "Show",book_path(@book),class:"book_#{@book.id}" %>
|
<%= link_to "Back",books_path,class:"back" %>
</div>
</div>


</div>